<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/trainingModeLayout"
    android:layout_width="115dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="5dp"
    android:background="@drawable/round_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/trainingTitle"
            style="@style/TextPayTableOrangeTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:layout_marginEnd="10dp"
            android:text="@string/training" />

        <ImageView
            android:id="@+id/atom"
            android:src="@drawable/atom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
             />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <LinearLayout
            android:background="@drawable/round_background_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/green"
                android:layout_width="25dp"
                android:padding="2dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="3dp"
                android:layout_height="25dp"
                android:background="@drawable/circle_black_outline"
                android:src="@drawable/circle_green"
                />

<!--            <ImageView-->
<!--                android:id="@+id/yellow"-->
<!--                android:layout_width="25dp"-->
<!--                android:padding="2dp"-->
<!--                android:layout_marginTop="1dp"-->
<!--                android:layout_marginBottom="1dp"-->
<!--                android:layout_height="25dp"-->
<!--                android:background="@drawable/circle_black_outline"-->
<!--                android:src="@drawable/circle_yellow"-->
<!--                />-->

            <ImageView
                android:id="@+id/red"
                android:layout_width="25dp"
                android:padding="2dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="3dp"
                android:layout_height="25dp"
                android:src="@drawable/circle_red"
                android:background="@drawable/circle_black_outline"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:orientation="vertical">

            <TextView
                style="@style/TipTextBlack"
                android:id="@+id/correctText"
                android:background="@color/yellow"
                android:layout_width="44dp"
                android:layout_height="wrap_content"
                android:paddingStart="2dp"
                android:paddingEnd="2dp"
                android:gravity="center"
                android:text="@string/correct"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="parent"
                />

            <TextView
                style="@style/TipTextWhite"
                android:id="@+id/correctCountAmountText"
                android:background="@color/black"
                android:layout_width="44dp"
                android:layout_height="wrap_content"
                android:paddingStart="2dp"
                android:paddingEnd="2dp"
                android:gravity="center"
                android:text="50"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/correctText"
                />

            <TextView
                style="@style/TipTextBlack"
                android:id="@+id/wrongText"
                android:background="@color/yellow"
                android:layout_width="44dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingStart="2dp"
                android:paddingEnd="2dp"
                android:gravity="center"
                android:text="@string/wrong"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="parent"
                />

            <TextView
                style="@style/TipTextWhite"
                android:id="@+id/wrongCountAmountText"
                android:background="@color/black"
                android:layout_width="44dp"
                android:layout_height="wrap_content"
                android:paddingStart="2dp"
                android:paddingEnd="2dp"
                android:gravity="center"
                android:text="50"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/correctText"
                />

            <TextView
                style="@style/TipTextBlack"
                android:id="@+id/accuracyText"
                android:background="@color/yellow"
                android:layout_width="44dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingStart="2dp"
                android:gravity="center"
                android:text="@string/percent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="parent"
                />

            <TextView
                style="@style/TipTextWhite"
                android:id="@+id/accuracyCountAmountText"
                android:background="@color/black"
                android:layout_width="44dp"
                android:layout_height="wrap_content"
                android:paddingStart="2dp"
                android:paddingEnd="2dp"
                android:gravity="center"
                android:text="50"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/correctText"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/card1Small"
            android:padding="1dp"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:src="@drawable/ace_clubs_small"
            />

        <ImageView
            android:id="@+id/card2Small"
            android:padding="1dp"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:src="@drawable/ace_clubs_small"
            />

        <ImageView
            android:id="@+id/card3Small"
            android:padding="1dp"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:src="@drawable/ace_clubs_small"
            />

        <ImageView
            android:id="@+id/card4Small"
            android:padding="1dp"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:src="@drawable/ace_clubs_small"
            />

        <ImageView
            android:id="@+id/card5Small"
            android:padding="1dp"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:src="@drawable/ace_clubs_small"
            />

    </LinearLayout>

</LinearLayout>