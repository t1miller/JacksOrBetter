<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardfrontlayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="com.poker.jacksorbetter.main.MainFragment">


<ImageView
    android:id="@+id/cardfront5"
    android:layout_width="70dp"
    android:layout_height="100dp"
    android:padding="2dp"
    android:src="@drawable/card_back_default"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />


<TextView
    android:id="@+id/betCircleText"
    android:layout_width="15dp"
    android:layout_height="15dp"
    android:gravity="center"
    android:textStyle="bold"
    android:textSize="12sp"
    android:text="5"
    android:background="@drawable/round_background_yellow_with_red_outline"
    app:layout_constraintEnd_toEndOf="@id/cardfront5"
    app:layout_constraintBottom_toBottomOf="@id/cardfront5" />


</androidx.constraintlayout.widget.ConstraintLayout>